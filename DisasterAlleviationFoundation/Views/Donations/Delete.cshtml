@model DisasterAlleviationFoundation.Models.Donation
@{
    ViewData["Title"] = "Delete Donation";
}

<h2>Delete Donation</h2>

<h4>Are you sure you want to delete this donation?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Donor Name</dt>
    <dd class="col-sm-9">@Model.DonorName ?? Model.User?.UserName</dd>

    <dt class="col-sm-3">Amount</dt>
    <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DonationID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
