@model DisasterAlleviationFoundation.Models.Donation
@{
    ViewData["Title"] = "Donation Details";
}

<h2>Donation Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Donor Name</dt>
        <dd class="col-sm-9">@Model.DonorName ?? Model.User?.UserName</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-3">Resource</dt>
        <dd class="col-sm-9">@Model.Resource?.Name</dd>

        <dt class="col-sm-3">User Email</dt>
        <dd class="col-sm-9">@Model.User?.Email</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.DonationID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
