@model DisasterAlleviationFoundation.Models.Donation
@{
    ViewData["Title"] = "Add Donation";
}

<h2>Add Donation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DonorName" class="control-label">Donor Name (optional)</label>
        <input asp-for="DonorName" class="form-control" placeholder="Enter donor name" />
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount (R)</label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Enter amount" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ResourceID" class="control-label">Associated Resource (optional)</label>
        <select asp-for="ResourceID" class="form-control" asp-items="@(new SelectList(ViewBag.Resources, "ResourceID", "Name"))">
            <option value="">-- None --</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Donation" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
