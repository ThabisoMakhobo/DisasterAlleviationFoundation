@model DisasterAlleviationFoundation.Models.Donation
@{
    ViewData["Title"] = "Create Donation";
}

<h2 class="mt-3">Make a Donation</h2>
<hr />

@if (TempData["DebugInfo"] != null)
{
    <div class="alert alert-info"><strong>Debug:</strong> @TempData["DebugInfo"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="white-space:pre-wrap;">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@* Show validation summary *@
<partial name="_ValidationScriptsPartial" />
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="Enter donation amount" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ResourceID" class="form-label">Select Resource (Optional)</label>
        <select asp-for="ResourceID" class="form-select" asp-items="ViewBag.Resources">
            <option value="">-- Select Resource --</option>
        </select>
        <span asp-validation-for="ResourceID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DonorName" class="form-label">Donor Name</label>
        <input asp-for="DonorName" class="form-control" placeholder="Enter donor name" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Donation</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
