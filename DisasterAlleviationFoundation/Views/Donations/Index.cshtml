@model IEnumerable<DisasterAlleviationFoundation.Models.Donation>

@{
    ViewData["Title"] = "Donations";
}

<h2 class="mt-3">Donations</h2>
<hr />

<!-- ✅ Display success messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- 🆕 Button to add new donation -->
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Make a Donation
    </a>
</div>

<!-- 🧾 Donations table -->
<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Donor Name</th>
            <th>Resource</th>
            <th>Amount (R)</th>
            <th>Date</th>
            <th>Donated By</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var donation in Model)
            {
                <tr>
                    <td>@donation.DonorName</td>
                    <td>@(donation.Resource != null ? donation.Resource.Name : "—")</td>
                    <td>@donation.Amount.ToString("N2")</td>
                    <td>@donation.Date.ToString("yyyy-MM-dd")</td>
                    <td>@(donation.User != null ? donation.User.Name : "External Donor")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@donation.DonationID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@donation.DonationID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No donations recorded yet.</td>
            </tr>
        }
    </tbody>
</table>
