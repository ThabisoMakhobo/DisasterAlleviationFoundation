@model DisasterAlleviationFoundation.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 p-4">

                <!-- Card Header -->
                <div class="card-header bg-primary text-white text-center rounded-3 mb-4">
                    <h2 class="card-title mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h2>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Name:</strong> <span>@Model.Name</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Email:</strong> <span>@Model.Email</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Role:</strong> <span>@Model.Role</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Skills:</strong> <span>@Model.Skills</span>
                        </li>
                    </ul>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Account" asp-action="EditProfile"
                           class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-pencil-square me-1"></i> Edit Profile
                        </a>
                        <a asp-controller="Account" asp-action="ChangePassword"
                           class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-key me-1"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
