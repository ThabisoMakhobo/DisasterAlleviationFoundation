@model IEnumerable<DisasterAlleviationFoundation.Models.IncidentReport>

<div class="container mt-5">
    <h2 class="mb-4">Manage Disaster Reports (Admin Only)</h2>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Location</th>
                <th>Date</th>
                <th>Reporter</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.DisasterType</td>
                    <td>@report.Location</td>
                    <td>@report.Date.ToShortDateString()</td>
                    <td>@report.ReportedBy</td>
                    <td>
                        @if (report.IsApproved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-sm btn-outline-info">View</a>
                        @if (!report.IsApproved)
                        {
                            <a asp-action="Approve" asp-route-id="@report.Id" class="btn btn-sm btn-success">Approve</a>
                        }
                        <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this report?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
