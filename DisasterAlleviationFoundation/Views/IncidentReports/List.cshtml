@model IEnumerable<DisasterAlleviationFoundation.Models.IncidentReport>

<div class="container mt-5">
    <h2 class="mb-4">Reported Incidents</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No incidents reported yet.</div>
    }
    else
    {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Type</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Reported By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model)
                {
                    <tr>
                        <td>@incident.DisasterType</td>
                        <td>@incident.Location</td>
                        <td>@incident.Date.ToString("yyyy-MM-dd")</td>
                        <td>@incident.Description</td>
                        <td>@incident.ReportedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
