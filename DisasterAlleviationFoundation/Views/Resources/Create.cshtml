@model DisasterAlleviationFoundation.Models.Resource

@{
    ViewData["Title"] = "Add Resource";
}

<h2>Add New Resource</h2>

<hr />
<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" placeholder="e.g. Food, Medical, Shelter, Funds" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DonorName" class="form-label"></label>
        <input asp-for="DonorName" class="form-control" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Resource</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
