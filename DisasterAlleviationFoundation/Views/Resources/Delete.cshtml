@model DisasterAlleviationFoundation.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>
<hr />

<h4>Are you sure you want to delete this resource?</h4>
<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Donor Name</dt>
        <dd class="col-sm-9">@Model.DonorName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ResourceID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
