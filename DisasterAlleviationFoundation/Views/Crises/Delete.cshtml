@model DisasterAlleviationFoundation.Models.Crisis
@{
    ViewData["Title"] = "Delete Crisis";
}

<h2>Delete Crisis</h2>
<p>Are you sure you want to delete this crisis?</p>

<div>
    <strong>@Model.Type</strong> - @Model.Location on @Model.Date.ToShortDateString()
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CrisisID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
