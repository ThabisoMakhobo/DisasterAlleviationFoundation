@model DisasterAlleviationFoundation.Models.Crisis

@{
    ViewData["Title"] = "Delete Crisis";
}

<h2>Delete Crisis</h2>

<h4>Are you sure you want to delete this?</h4>

<div>
    <strong>Type:</strong> @Model.Type <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Date:</strong> @Model.Date.ToShortDateString() <br />
    <strong>Status:</strong> @Model.Status
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CrisisID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
