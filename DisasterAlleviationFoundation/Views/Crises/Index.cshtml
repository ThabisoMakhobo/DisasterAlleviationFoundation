@model IEnumerable<DisasterAlleviationFoundation.Models.Crisis>

@{
    ViewData["Title"] = "Crises List";
}

<h2>Crises</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Crisis</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Location</th>
            <th>Date Reported</th>
            <th>Status</th>
            <th>Resource</th>
            <th>Donation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Location</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>@(item.Resource?.Name ?? "N/A")</td>
                <td>@(item.Donation?.DonorName ?? "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CrisisID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.CrisisID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CrisisID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
